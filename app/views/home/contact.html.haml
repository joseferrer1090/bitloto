  .bg4.p9
    .container
      .row
        .grid_8.wrap
          %h2 stay in touch
          .map
            %iframe.map_c{:src => "https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d24214.807650104907!2d-73.94846048422478!3d40.65521573400813!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sus!4v1395650655094", :style => "border:0"}
          .grid_3.alpha.wrap
            %address.address1
              %p
                8901 Marmora Road,
                = succeed "Glasgow," do
                  %br/
            %dl
              %dt
              %dd
                Freephone:
                %span +1 800 559 6580
              %dd
                Telephone:
                %span +1 959 603 6035
              %dd
                FAX:
                %span +1 504 889 9898
              %dd
                E-mail: 
                %span
                  %a{:href => "#"} mail@demolink.org
          .grid_5.omega
            %address.address1
              %p
                9863 - 9867 Mill Road,
                = succeed "Cambridge," do
                  %br/
            %dl
              %dt
              %dd
                Freephone:
                %span +1 800 559 6580
              %dd
                Telephone:
                %span +1 959 603 6035
              %dd
                FAX:
                %span +1 504 889 9898
              %dd
                E-mail: 
                %span
                  %a{:href => "#"} mail@demolink.org
        .grid_4
          %h2 Contact form
          %form#contact-form
            .contact-form-loader
            %fieldset
              %label.name
                %input{"data-constraints" => "@Required @JustLetters", :name => "name", :placeholder => "Name:", :type => "text", :value => ""}/
                %span.empty-message *This field is required.
                %span.error-message *This is not a valid name.
              %label.email
                %input{"data-constraints" => "@Required @Email", :name => "email", :placeholder => "E-mail:", :type => "text", :value => ""}/
                %span.empty-message *This field is required.
                %span.error-message *This is not a valid email.
              %label.phone
                %input{"data-constraints" => "@Required @JustNumbers", :name => "phone", :placeholder => "Phone:", :type => "text", :value => ""}/
                %span.empty-message *This field is required.
                %span.error-message *This is not a valid phone.
              %label.message
                %textarea{"data-constraints" => "@Required @Length(min=20,max=999999)", :name => "message", :placeholder => "Message:"}
                  :preserve

                                                                        %span.empty-message *This field is required.
                %span.error-message *The message is too short.
              / <label class="recaptcha"><span class="empty-message">*This field is required.</span></label>
              .btns
                %a.link{"data-type" => "reset", :href => "#"} reset
                %a.link{"data-type" => "submit", :href => "#"} submit
            .modal.fade.response-message
              .modal-dialog
                .modal-content
                  .modal-header
                    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
                    %h4.modal-title Modal title
                  .modal-body
                    You message has been sent! We will be in touch soon.
